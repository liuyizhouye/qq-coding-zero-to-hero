{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug function_call (step)",
      "type": "debugpy",
      "request": "launch",
      "module": "function_call.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "stopOnEntry": true,
      "args": [
        "--prompt",
        "${input:functionCallPrompt}",
        "--print-trace",
        "y"
      ]
    },
    {
      "name": "Debug mcp (approve=y)",
      "type": "debugpy",
      "request": "launch",
      "module": "mcp.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "stopOnEntry": true,
      "args": [
        "--approve",
        "y",
        "--print-trace",
        "y"
      ]
    },
    {
      "name": "Debug mcp (approve=n)",
      "type": "debugpy",
      "request": "launch",
      "module": "mcp.main",
      "cwd": "${workspaceFolder}",
